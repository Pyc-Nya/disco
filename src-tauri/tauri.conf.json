{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "disco",
  "version": "0.1.0",
  "identifier": "com.disco.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "disco",
        "width": 400,
        "height": 400,
        "x": 100,
        "y": 100,
        "minWidth": 400,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/yakui.ico"
    ]
  }
}
